@model RegisterViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Novena- Health Care &amp; Medical template</title>

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Health Care Medical Html5 Template">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="author" content="Themefisher">
    <meta name="generator" content="Themefisher Novena HTML Template v1.0">

    <!-- theme meta -->
    <meta name="theme-name" content="novena" />

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png" />

    <!--
    Essential stylesheets
    =====================================-->
    <link rel="stylesheet" href="~/plugins/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/plugins/icofont/icofont.min.css">
    <link rel="stylesheet" href="~/plugins/slick-carousel/slick/slick.css">
    <link rel="stylesheet" href="~/plugins/slick-carousel/slick/slick-theme.css">

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="~/css/style.css">
    <title>Welcome Patient</title>
    <link rel="stylesheet" href="styles.css"> <!-- CSS dosyanızın yolu -->
</head>
<body>
    <a asp-controller="Home" asp-action="Index" class="navbar-brand">
        <img src="~/images/logo.png" alt="" class="img-fluid">
    </a>
    <div class="login-container">
        <h2 class="text-center">Welcome Patient</h2>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        <form asp-controller="Auth" asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">First Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="error-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Surname" class="form-label">LastName</label>
                <input asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname" class="error-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="error-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="error-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PasswordVerify" class="form-label">Repeat Password</label>
                <input asp-for="PasswordVerify" class="form-control">
                <span asp-validation-for="PasswordVerify" class="error-text"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <a asp-action="Login" asp-controller="Auth" class="btn btn-success">Login</a>
        </form>


        <div class="login-options">
            <form action="https://admin.canbulanhospital.com/login" method="get">
                <button type="submit" class="btn admin-login">Admin Login</button>
            </form>
            <form action="https://doctor.canbulanhospital.com/login" method="get">
                <button type="submit" class="btn doctor-login">Doctor Login</button>
            </form>
        </div>
    </div>
</body>
</html>


<style>
    .login-container {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .login-form {
        margin-top: 20px;
    }

    .btn {
        width: 100%;
        margin-top: 10px;
    }

    .error-text {
        color: #ff5733; /* Hata mesajı rengi */
    }

    /* Özelleştirilmiş renkler ve stiller */
    .admin-login {
        background-color: #ff5733; /* Admin Login düğmesinin arka plan rengi */
        border-color: #ff5733; /* Admin Login düğmesinin kenarlık rengi */
    }

    .doctor-login {
        background-color: #1ac7e8; /* Doctor Login düğmesinin arka plan rengi */
        border-color: #1ac7e8; /* Doctor Login düğmesinin kenarlık rengi */
    }

</style>
