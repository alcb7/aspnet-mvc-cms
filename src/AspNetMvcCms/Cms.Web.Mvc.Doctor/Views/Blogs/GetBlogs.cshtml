@using Cms.Data.Models.Entities;
@model List<BlogEntity>
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-8 col-4">
                <h4 class="page-title">Blog</h4>
            </div>
            <div class="col-sm-4 col-8 text-right m-b-30">
                <a asp-action="AddBlogs" asp-controller="Blogs" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Blog</a>
            </div>


        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-6 col-lg-4 mb-4">
                    <div class="blog grid-blog">
                        <div class="blog-image">
                            <img src="https://api.canbulanhospital.com/api/file?fileName=@item.ResimDosyaAdi" alt="blog-image" class="img-fluid w-100">
                        </div>
                        <div class="blog-content">
                            <h3 class="blog-title">@item.Title</h3>
                            <p>@item.Description</p>
                           
                            <div class="blog-info clearfix">
                                <div class="post-left">
                                    <ul>
                                        <li><a href="#."><i class="fa fa-calendar"></i> <span>@item?.Category?.Title</span></a></li>
                                    </ul>
                                </div>
                                <div>
                                    <a asp-action="UpdateBlogs" asp-controller="Blogs" asp-route-id="@item.Id" class="dropdown-item">
                                        <i class="fa fa-pencil m-r-5"></i> Edit
                                    </a>

                                    <form method="post" asp-action="DeleteBlogs" asp-controller="Blogs">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit">Sil</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
