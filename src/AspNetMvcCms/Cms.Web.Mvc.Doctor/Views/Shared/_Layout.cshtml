@{
    var girisyapti = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="en">



<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <title>Preclinic - Medical & Hospital - Bootstrap 4 Admin Template</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/select2.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/tagsinput.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
</head>

<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a class="logo">
                    <img src="~/assets/img/logo.png" width="35" height="35" alt=""> <span>Preclinic</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
               
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                      
                        <span>Doctor</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-action="GetDoctor" asp-controller="Doctor"><i class="fa fa-user-md"></i> <span>My Profile</span></a>
                       
                        <a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                    </div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" asp-action="GetDoctor" asp-controller="Doctor"><i class="fa fa-user-md"></i> <span>My Profile</span></a>
                   
                    
                    <a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                      

                        <li>
                        <a asp-action="Index" asp-controller="Home"><i class="fa fa-user"></i> <span>Home</span></a>
                        </li>
                        
                        <li>
                            <a asp-action="GetPatients" asp-controller="Patients"><i class="fa fa-user-md"></i> <span>Patients</span></a>
                        </li>
                        <li>
                            <a asp-action="GetAppointments" asp-controller="Appointments" asp-route-id=""><i class="fa fa-calendar-check-o"></i> <span>Appointments</span></a>
                        </li>

                        <li>
                            <a asp-action="GetBlogs" asp-controller="Blogs" asp-route-id=""><i class="fa fa-commenting-o"></i> <span>Blogs</span></a>
                        </li>

                        <li>
                            <a asp-action="GetDoctorComment" asp-controller="DoctorComment" asp-route-id=""><i class="fa fa-commenting-o"></i> <span>Doctor Comment</span></a>
                        </li> 

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/assets/js/jquery-3.2.1.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery.slimscroll.js" asp-append-version="true"></script>
    <script src="~/assets/js/Chart.bundle.js" asp-append-version="true"></script>
    <script src="~/assets/js/chart.js" asp-append-version="true"></script>
    <script src="~/assets/js/app.js" asp-append-version="true"></script>

</body>
</html>
