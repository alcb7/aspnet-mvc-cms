@model BlogViewModel

<div class="page-wrapper">
    <div class="content">
        <form asp-action="AddBlogs" asp-controller="Blogs" method="post">
            <div class="form-group">
                <label for="Title">Title:</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Description">Description:</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            @if (ViewBag.CategoryList != null)
            {
                <div class="form-group">
                    <label for="BlogCategoryId">Category:</label>
                    <select asp-for="BlogCategoryId" asp-items="ViewBag.CategoryList" class="form-control"></select>
                </div>
            }
            else
            {
                <p>Category options are not available.</p>
            }

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>