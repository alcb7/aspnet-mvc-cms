@model DoctorViewModel

<div class="page-wrapper">
    <div class="content">
        <form asp-action="AddDoctors" asp-controller="Doctors" method="post">

            <div class="form-group">
                <label for="Name">Name:</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Surname">Surname:</label>
                <input asp-for="Surname" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Password">Password:</label>
                <input asp-for="Password" class="form-control" />
            </div>

            @if (ViewBag.CategoryList != null)
            {
                <div class="form-group">
                    <label for="CategoryId">Category:</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control"></select>
                </div>
            }
            else
            {
                <p>Category options are not available.</p>
            }

            <div class="form-group">
                <label for="Address">Address:</label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Cv">Cv:</label>
                <input asp-for="Cv" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
