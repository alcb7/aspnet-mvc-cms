@model DoctorViewModel

<div class="page-wrapper">
    <div class="content">
        <form asp-action="AddDoctors" asp-controller="Doctors" method="post">
          
            <div class="form-group">
                <label for="Name">Name:</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Surname">Surname:</label>
                <textarea asp-for="Surname" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <textarea asp-for="Password" class="form-control"></textarea>
            </div>
            <div class="form-group">

                <label for="CategoryId">CategoryId:</label>
                <textarea asp-for="CategoryId" class="form-control"></textarea>
            </div>
            <div class="form-group">

                <label for="Address">Address:</label>
                <textarea asp-for="Address" class="form-control"></textarea>
            </div>
            <div class="form-group">

                <label for="Cv">Cv:</label>
                <textarea asp-for="Cv" class="form-control"></textarea>
            </div>
            <div class="form-group">

                <label for="Phone">Phone:</label>
                <textarea asp-for="Phone" class="form-control"></textarea>
            </div>
            <div class="form-group">

                <label for="Email">Email:</label>
                <textarea asp-for="Email" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>