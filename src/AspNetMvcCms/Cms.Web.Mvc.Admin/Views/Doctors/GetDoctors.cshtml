@using Cms.Data.Models.Entities;
@model List<DoctorEntity>
<div class="page-wrapper">
    <div class="content">
        <div class="row doctor-grid">
            <div class="row">
                <div class="col-sm-8 col-4">
                    <h4 class="page-title">Blog</h4>
                </div>
                <div class="col-sm-4 col-8 text-right m-b-30">
                    <a asp-action="AddDoctors" asp-controller="Doctors" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Doctor</a>
                </div>


            </div>
            <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="profile-widget">
                        <div class="doctor-img">
                            <a class="avatar" href="profile.html"><img alt="" src="assets/img/doctor-thumb-03.jpg"></a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" asp-action="UpdateDoctors" asp-controller="Doctors" asp-route-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                <a class a="dropdown-item" href="#" data-toggle="modal" data-target="#delete_doctor"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                            </div>
                        </div>
                        <h4 class="doctor-name text-ellipsis"><a href="profile.html">@item.Name @item.Surname</a></h4>
                        <div class="doc-prof">@item.Category</div>
                        <div class="user-country">
                            <i class="fa fa-map-marker"></i> United States, San Francisco
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>
