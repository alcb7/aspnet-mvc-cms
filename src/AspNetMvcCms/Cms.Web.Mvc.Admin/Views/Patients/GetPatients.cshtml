@using Cms.Data.Models.Entities;
@model List<PatientEntity>
<div class="page-wrapper">
	<div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Patients</h4>
			</div>
			
		</div>

		<div class="row">
			@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
			{
				<div class="alert alert-success" role="alert">
					@ViewBag.Message
				</div>
			}
			@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
			{
				<div class="alert alert-danger" role="alert">
					@ViewBag.Error
				</div>
			}
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table datatable mb-0">
						<thead>
							<tr>
								<th>Name</th>
								
								<th>Address</th>
								<th>Phone</th>
								<th>Email</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						@foreach(var item in Model)
						{
							<tbody>
								<tr>
									<td> @item.Name @item.Surname</td>
									
									<td>Denizli</td>
									<td>@item.Phone</td>
									<td>@item.Email</td>
									<td class="text-right">
										<div class="dropdown dropdown-action">
											<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a class ="dropdown-item" asp-action="UpdatePatients" asp-controller="Patients" asp-route-id="@item.Id" class="dropdown-item">
													<i class="fa fa-pencil m-r-5"></i> Edit
												</a>

												<form method="post" asp-action="DeletePatients" asp-controller="Patients">
													<input type="hidden" name="id" value="@item.Id" />
													<button type="submit">Sil</button>
												</form>
											</div>
										</div>
									</td>
								</tr>

							</tbody>
						}
						
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="delete_patient" class="modal fade delete-modal" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body text-center">
				<img src="assets/img/sent.png" alt="" width="50" height="46">
				<h3>Are you sure want to delete this Patient?</h3>
				<div class="m-t-20">
					<a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
					<button type="submit" class="btn btn-danger">Delete</button>
				</div>
			</div>
		</div>
	</div>

</div>